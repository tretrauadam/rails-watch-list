<div class="container py-2 cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-black">
    <h1>Movie Library</h1>
    <h3 class="typed-js"></h3>
  </div>
</div>
<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-5">My Lists</h3>
    <%= link_to 'Create a movie list', new_list_path, class: 'btn btn-outline-primary' %>
  </div>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="co-12 colsm-6 col-md-4">
        <%= link_to list_path(list), class:'text-decoration-none' do %>
          <div class="card-category" >
            <%= list.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
