
  <div class="card-category card-large">
    <h1><%= @list.name %></h1>
  </div>

<div class="container mb-5">
  <div class="d-flex justify-content-between my-4">
    <div>
      <%= link_to 'add a movie', new_list_bookmark_path(@list), class: 'btn btn-info' %>
      <%= link_to 'delete this list', list_path(@list), method: :delete, class: 'btn btn-info', data: { confirm: 'Are you sure you want to delete this list?' } %>
    </div>
  </div>
    <% @list.movies.each do |movie| %>
      <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
            <strong><%= movie.title %> <span class="text-muted font-weight-normal">
            <small class="text-muted"><%= movie.overview %></small>
             <div>
                <%= bookmark.comment %></small>
              </div>
              <%= link_to 'delete', bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure you want to remove #{movie.title} from your #{@list.name} list"}, class: 'text-info' %></small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
